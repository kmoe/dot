! urxvt
URxvt.perl-ext-common: default,clipboard,keyboard-select

URxvt*background: #333333
URxvt*foreground: #ffffff

! Normal
! color0    black
! color1    red
! color2    green
! color3    yellow
! color4    blue
! color5    purple
! color6    cyan
! color7    white

urxvt*color0:    #6c6c6c
urxvt*color1:    #e9897c
urxvt*color2:    #b6e77d
urxvt*color3:    #ecebbe
urxvt*color4:    #a9cdeb
urxvt*color5:    #ea96eb
urxvt*color6:    #c9caec
urxvt*color7:    #f2f2f2

! Light
! color8    black
! color9    red
! color10    green
! color11    yellow
! color12    blue
! color13    purple
! color14    cyan
! color15    white

urxvt*color8:    #747474
urxvt*color9:    #f99286
urxvt*color10:    #c3f786
urxvt*color11:    #fcfbcc
urxvt*color12:    #b6defb
urxvt*color13:    #fba1fb
urxvt*color14:    #d7d9fc
urxvt*color15:    #e2e2e2

urxvt*scrollbar: false

!URxvt.font: xft:Input Mono:size=14,xft:Hack,xft:Source Code Pro
!URxvt.boldFont: xft:Input Mono:size=14:style=Bold,xft:Hack:style=Bold,xft:Source Code Pro

! 10 foreground
! 11 background
! 708 padding

! dark aqua
URxvt.keysym.C-6: command:\033]11;#045850\007\033]10;#ffffff\007\033]708;#045850\007

! dark yellow
URxvt.keysym.C-7: command:\033]11;#855c0a\007\033]10;#ffffff\007\033]708;#855c0a\007

! dark purple
URxvt.keysym.C-8: command:\033]11;#0f0430\007\033]10;#ddd6f1\007\033]708;#0f0430\007

! brick red
URxvt.keysym.C-9: command:\033]11;#3e0404\007\033]10;#fafbfb\007\033]708;#3e0404\007

! black on white, for some reason
URxvt.keysym.C-0: command:\033]11;#ffffff\007\033]10;#333333\007\033]708;#333333\007

! disable auto copy on mouse select
URxvt.clipboard.autocopy: false

URxvt.keysym.Control-Insert: perl:clipboard:copy
